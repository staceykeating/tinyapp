<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(!userID) {%>
    <form class="form-inline" action="/logindirect" method="POST"> 
      <div class="form-group mb-2">
        <button type="" type="text" style="margin: 1em"  class="btn btn-primary">Login</button>
      </div>  
    </form>
    <form class="form-inline" action="/registerdirect" method="POST"> 
      <div class="form-group mb-2">
        <button type="" type="text" style="margin: 1em"  class="btn btn-primary">Register</button>
      </div>  
    </form>
    <%} %>
    <% if(userID) {%>
      <form class="form-inline" action="/logout" method="POST"> 
        <div class="form-group mb-2"> 
          <label for="loginstatus">Logged in as: <%= email %> ! </label> 
          <button type="" style="margin: 1em" type="text"  class="btn btn-primary">Logout</button>
        </div>  
      </form>
      <%} %>
    
  </nav>
</header>